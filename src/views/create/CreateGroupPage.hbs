<body>
  <!-- Page Content -->
  <div class="container">
    <!--main content start-->
    <main>
      <div class="container-fluid ">
        <div class="row ">
          <div class="col-lg-14">
            <!-- Page Content -->

            <section class="wrapper">
              <div class="row">
                <div class="col-lg-12">
                  <h3 class="page-header"><i class="fa fa-beer"></i> Create a Group Page</h3>
                  <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                    <li><i class="fa fa-tasks"></i>Group Pages</li>
                    <li><i class="fa fa-beer"></i>Create a Group Page</li>
                  </ol>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <section class="panel">
                    <header class="panel-heading">
                      Group Page Form
                    </header>
                    <div class="panel-body">
                      <form class="form-horizontal " method="get">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Group Name</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Group Administrator</label>
                          <div class="col-sm-10">
                            <p class="form-control-static">john.doe@upr.edu</p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Group Description</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Invite Members</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Ex: Javier Colon, Victor Martinez">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="exampleInputFile"> <i class="fa fa-picture-o"></i>Group Picture</label>
                          <div class="col-sm-10">
                            <input type="file" id="exampleInputFile">
                            <p class="help-block">Upload a picture to represent your Group!</p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-lg-2 control-label">Group Tags</label>
                          <div class="col-lg-10">
                            <input name="tagsinput" id="tagsinput" class="tagsinput" value="Programming, Robotics" />
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-lg-2 control-label">Administrator Email</label>
                          <div class="col-lg-10">
                            <p class="form-control-static">john.doe@upr.edu</p>
                          </div>
                        </div>

                        <button type="submit" class="btn btn-primary pull-right">Create</button>
                      </form>
                    </div>
                  </section>
                </div>
              </div>
              <!-- Basic Forms & Horizontal Forms-->
              <!-- page end-->
            </section>
          </div>
    </main>
    <!--main content end-->
    </div>

    <!-- container section end -->
